<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="caisheng.com.search.TransitionsActivity">

    <Button
        android:id="@+id/button42"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:onClick="trans"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="view1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/lin"
        android:layout_below="@+id/button42"
        android:orientation="vertical">

        <include layout="@layout/view1" />
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="view2"
        android:id="@+id/button43"
        android:onClick="trans1"
        android:layout_alignBottom="@+id/button42"
        android:layout_toRightOf="@+id/button42"
        android:layout_toEndOf="@+id/button42" />
</RelativeLayout>
